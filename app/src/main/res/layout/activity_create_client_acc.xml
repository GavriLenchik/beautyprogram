<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFB3B3"
    tools:context=".forClient.CreateClientAcc">

    <Button
        android:id="@+id/buttonCreateClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="66dp"
        android:onClick="backOnMain"
        android:text="@string/createAcc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCancel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="66dp"
        android:onClick="backOnReg"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="+380 00-000-00-00"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextLogin2"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextSurname2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="51dp"
        android:layout_height="22dp"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/name"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/surname2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextPass2"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="87dp"
        android:ems="10"
        android:hint="***********"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreateClient"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="108dp"
        android:layout_height="23dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="34dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/number"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/login3"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextLogin2"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="unique name in the system"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextPass2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/login3"
        android:layout_width="46dp"
        android:layout_height="25dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="33dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/login"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/pass3"
        app:layout_constraintEnd_toStartOf="@+id/editTextLogin2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/surname2"
        android:layout_width="68dp"
        android:layout_height="24dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/surname"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/number2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextSurname2"
        android:layout_width="233dp"
        android:layout_height="48dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/pass3"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/pass"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreateClient"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewWiz2"
        android:layout_width="191dp"
        android:layout_height="24dp"
        android:layout_marginBottom="83dp"
        android:background="#DBADDD"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/createClientAcc"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/logo3"
        android:layout_width="179dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="cursive"
        android:text="@string/app_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewWiz2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>