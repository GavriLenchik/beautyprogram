<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forGuest.GuestFreeOrders">

    <SearchView
        android:layout_width="203dp"
        android:layout_height="39dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="592dp"
        android:layout_marginBottom="28dp"
        android:background="#EFE6E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="485dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/orderSMS"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonBack5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUrgent2">

        <LinearLayout
            android:id="@+id/linGOrderList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:drawable/button_onoff_indicator_off"
            android:orientation="vertical"
            android:showDividers="middle"></LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonUrgent2"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/urgent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAll2"
        android:layout_width="187dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="23dp"
        android:text="@string/all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonBack5"
        android:layout_width="65dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:background="#FD8282"
        android:contentDescription="@string/backOn"
        android:minHeight="48dp"
        android:onClick="backOnGuestAcc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        app:tint="#150606" />
</androidx.constraintlayout.widget.ConstraintLayout>